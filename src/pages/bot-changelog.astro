---
import MainGridLayout from '../layouts/MainGridLayout.astro'
import AnimatedText from '../components/AnimatedText.astro'
import { Icon } from 'astro-icon/components'

const title = '機器人更新日誌'
const description = '鸣潮小助手最新更新和功能改進記錄'

// 更新日誌數據
const changelogData = [
  {
    version: 'v1.0.0',
    date: '2025-08-24',
    type: '重大更新',
    title: '重大调整：机器人内部制度',
    description: '团队调整以及小更新',
    features: [
      '奥古面板已实装（数值尚在调整）'
    ],
    fixes: [
      'N/A'
    ]
  }
]
---

<MainGridLayout title={title} description={description}>
  <div class="changelog-page">
    <!-- 標題區域 -->
    <div class="changelog-header">
      <AnimatedText 
        texts={['機器人更新日誌', 'Bot Changelog', '版本进化史']} 
        interval={4000}
        className="changelog-title"
      />
      <p class="changelog-subtitle">
        追蹤共鳴機器人的每一次進步與創新
      </p>
    </div>

    <!-- 更新日誌列表 -->
    <div class="changelog-list">
      {changelogData.map((item, index) => (
        <div class={`changelog-item ${item.type}`} style={`animation-delay: ${index * 200}ms`}>
          <div class="changelog-header-item">
            <div class="version-badge">
              <span class="version-number">{item.version}</span>
              <span class="version-type">{item.type}</span>
            </div>
            <div class="changelog-meta">
              <div class="changelog-date">
                <Icon name="material-symbols:calendar-today-outline-rounded" class="icon" />
                {item.date}
              </div>
              <div class="changelog-title-item">
                <Icon name="material-symbols:update-rounded" class="icon" />
                {item.title}
              </div>
            </div>
          </div>
          
          <div class="changelog-content">
            <p class="changelog-description">{item.description}</p>
            
            {item.features.length > 0 && (
              <div class="changelog-section">
                <h4 class="section-title">
                  <Icon name="material-symbols:add-circle-outline-rounded" class="icon" />
                  新增功能
                </h4>
                <ul class="feature-list">
                  {item.features.map(feature => (
                    <li class="feature-item">{feature}</li>
                  ))}
                </ul>
              </div>
            )}
            
            {item.fixes.length > 0 && (
              <div class="changelog-section">
                <h4 class="section-title">
                  <Icon name="material-symbols:bug-report-outline-rounded" class="icon" />
                  修復問題
                </h4>
                <ul class="fix-list">
                  {item.fixes.map(fix => (
                    <li class="fix-item">{fix}</li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- 底部信息 -->
    <div class="changelog-footer">
      <div class="footer-content">
        <p>想要了解更多技術細節？</p>
        <a href="https://github.com/YashajinAlice" target="_blank" rel="noopener" class="github-link">
          <Icon name="fa6-brands:github" class="icon" />
          查看 GitHub 倉庫
        </a>
      </div>
    </div>
  </div>
</MainGridLayout>

<style>
  .changelog-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .changelog-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
    overflow: visible;
  }

  .changelog-subtitle {
    font-size: 1.2rem;
    color: var(--text-75);
    margin-top: 1rem;
    font-weight: 500;
  }

  .changelog-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .changelog-item {
    background: var(--card-bg);
    border-radius: var(--radius-large);
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    opacity: 0;
    animation: slide-in-up 0.6s ease forwards;
  }

  .changelog-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .changelog-item.重大更新 {
    border-left: 4px solid #ef4444;
  }

  .changelog-item.中度更新 {
    border-left: 4px solid #f59e0b;
  }

  .changelog-item.微更新 {
    border-left: 4px solid #10b981;
  }

  .changelog-header-item {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .version-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 80px;
  }

  .version-number {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--primary);
  }

  .version-type {
    font-size: 0.8rem;
    padding: 0.2rem 0.5rem;
    border-radius: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .major .version-type {
    background: #fef2f2;
    color: #dc2626;
  }

  .minor .version-type {
    background: #fffbeb;
    color: #d97706;
  }

  .patch .version-type {
    background: #f0fdf4;
    color: #059669;
  }

  .changelog-meta {
    flex: 1;
  }

  .changelog-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-50);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .changelog-title-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--text-90);
  }

  .changelog-content {
    margin-left: 95px;
  }

  .changelog-description {
    font-size: 1.1rem;
    color: var(--text-75);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .changelog-section {
    margin-bottom: 1.5rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-90);
    margin-bottom: 1rem;
  }

  .feature-list,
  .fix-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-item,
  .fix-item {
    position: relative;
    padding: 0.5rem 0 0.5rem 1.5rem;
    color: var(--text-75);
    line-height: 1.5;
  }

  .feature-item::before {
    content: '✨';
    position: absolute;
    left: 0;
    top: 0.5rem;
  }

  .fix-item::before {
    content: '🔧';
    position: absolute;
    left: 0;
    top: 0.5rem;
  }

  .changelog-footer {
    text-align: center;
    margin-top: 4rem;
    padding: 2rem;
    background: var(--card-bg);
    border-radius: var(--radius-large);
  }

  .footer-content p {
    font-size: 1.1rem;
    color: var(--text-75);
    margin-bottom: 1rem;
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--btn-regular-bg);
    color: var(--btn-content);
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .github-link:hover {
    background: var(--btn-regular-bg-hover);
    transform: translateY(-2px);
  }

  .icon {
    font-size: 1.2rem;
  }

  @keyframes slide-in-up {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* 響應式設計 */
  @media (max-width: 768px) {
    .changelog-page {
      padding: 1rem;
    }

    .changelog-header-item {
      flex-direction: column;
      gap: 1rem;
    }

    .changelog-content {
      margin-left: 0;
    }

    .version-badge {
      flex-direction: row;
      gap: 1rem;
      min-width: auto;
    }
  }
</style>
